{
  "manifest_version": 3,
  "name": "Cookie Header Extractor",
  "version": "1.0",
  "description": "Configure and extract specific cookie headers from websites",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Header Extractor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
  // "icons": {
  //   "16": "icon16.png",
  //   "48": "icon48.png",
  //   "128": "icon128.png"
  // }
}